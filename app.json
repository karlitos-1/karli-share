
{
  "expo": {
    "name": "Karli'Share",
    "slug": "karli-share",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/ea7ba2fc-1cf2-4330-a169-2ab9480db233.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/images/ea7ba2fc-1cf2-4330-a169-2ab9480db233.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pegg.karlishare",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Cette application a besoin d'accéder à la caméra pour scanner les codes QR et prendre des photos à partager.",
        "NSPhotoLibraryUsageDescription": "Cette application a besoin d'accéder à vos photos pour les partager avec d'autres utilisateurs.",
        "NSMicrophoneUsageDescription": "Cette application a besoin d'accéder au microphone pour enregistrer des fichiers audio à partager."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/ea7ba2fc-1cf2-4330-a169-2ab9480db233.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.pegg.karlishare",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.INTERNET",
        "android.permission.ACCESS_WIFI_STATE",
        "android.permission.CHANGE_WIFI_STATE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.VIBRATE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/images/ea7ba2fc-1cf2-4330-a169-2ab9480db233.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-font",
      "expo-router",
      "expo-web-browser",
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Permettre à Karli'Share d'accéder à la caméra pour scanner les codes QR."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "L'application accède à vos photos pour vous permettre de les partager.",
          "cameraPermission": "L'application accède à votre appareil photo pour vous permettre de prendre des photos à partager."
        }
      ],
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ],
      "expo-file-system"
    ],
    "scheme": "karlishare",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
